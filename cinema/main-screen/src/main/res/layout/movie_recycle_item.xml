<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

        <ImageView
            android:id="@+id/movie_recycle_item_image"
            android:layout_width="120dp"
            android:layout_height="180dp"
            tools:src="@drawable/barbie_utils_screen"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/movie_recycle_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7.5"
            android:visibility="gone"
            android:textSize="24sp"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/movie_recycle_item_image"/>

    <TextView
        android:id="@+id/movie_recycle_item_title"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Barbie"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@id/movie_recycle_item_image"
        app:layout_constraintEnd_toEndOf="@id/movie_recycle_item_image"
        app:layout_constraintTop_toBottomOf="@id/movie_recycle_item_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>